@{
    ViewData["Title"] = "Quản lý Câu Lạc Bộ";
    Layout = "_Layout";
}

<div class="container mt-5">
    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Trang Chủ | Quản Lý Lớp Năng Khiếu & CLB</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <style>

            :root {
                --primary-color: #007bff; 
            }
            .card-custom {
                transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
                border: none;
                border-radius: 15px;
            }
            .card-custom:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            }
            .icon-large {
                font-size: 3rem;
                margin-bottom: 15px;
            }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <header class="text-center mb-5">
                <h1 class="display-4 text-primary">Hệ Thống Quản Lý Hoạt Động Ngoại Khóa</h1>
                <p class="lead">Trường Đại Học <strong>NGOẠI NGỮ TIN HỌC THÀNH PHỐ HỒ CHÍ MINH</strong></p>
            </header>

            <div class="row text-center justify-content-center g-4">

                <div class="col-md-5">
                    <div class="card card-custom p-4 shadow-lg bg-light">
                        <div class="card-body">
                            <i class="bi bi-palette-fill icon-large text-warning"></i>
                            <h3 class="card-title mb-3">Quản Lý Lớp Năng Khiếu</h3>
                            <p class="card-text text-muted">Thêm, sửa, xóa và quản lý danh sách sinh viên tham gia các lớp học kỹ năng/nghệ thuật.</p>
                            <a asp-controller="Home" asp-action="LOPNANGKHIEU" class="btn btn-warning btn-lg mt-3">
                                <i class="bi bi-arrow-right-circle-fill"></i> Truy Cập Hệ Thống
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="card card-custom p-4 shadow-lg bg-light">
                        <div class="card-body">
                            <i class="bi bi-people-fill icon-large text-success"></i>
                            <h3 class="card-title mb-3">Quản Lý Câu Lạc Bộ</h3>
                            <p class="card-text text-muted">Quản lý danh sách các Câu Lạc Bộ, thông tin thành viên, và các hoạt động của CLB.</p>
                            <a asp-controller="Home" asp-action="CAULACBO" class="btn btn-success btn-lg mt-3">
                                <i class="bi bi-arrow-right-circle-fill"></i> Truy Cập Hệ Thống
                            </a>
                        </div>
                    </div>
                </div>

            </div>

            <hr class="my-5">
        </div>

       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
</div>

