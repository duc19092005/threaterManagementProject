<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSDLPTProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSDLPTProject.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <style>
        :root {
            --sky-blue: #00BFFF;
            --ocean-blue: #0077B6;
            --navy-dark: #002D62;
            --light-text: #FFFFFF;
            --dark-text: #333333;
        }

        .navbar-custom {
            background-color: var(--navy-dark) !important;
            color: var(--light-text);
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: var(--light-text) !important;
            padding: 10px 15px;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link:focus {
                color: var(--sky-blue) !important;
                background-color: rgba(255, 255, 255, 0.1); 
                border-radius: 5px;
            }

        body {
            color: var(--dark-text);
        }

        .nav-link ion-icon {
            color: var(--sky-blue);
            vertical-align: middle;
        }

        .footer {
            border-top: 1px solid #ddd;
            background-color: #f8f9fa;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-sm mb-5">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"></i> Trang Chủ </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="CAULACBO">
                                <ion-icon name="golf-outline" class="me-1"></ion-icon>Câu lạc bộ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="GIANGVIEN">
                                <ion-icon name="people-outline" class="me-1"></ion-icon>Giảng viên
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="SINHVIEN">
                                <ion-icon name="school-outline" class="me-1"></ion-icon>Sinh viên
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="LOPNANGKHIEU">
                                <ion-icon name="musical-notes-outline" class="me-1"></ion-icon>Lớp năng khiếu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="BIENLAI">
                                <ion-icon name="receipt-outline" class="me-1"></ion-icon>Biên lai
                            </a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link" href="/DangXuat"><i class="bi bi-box-arrow-right"></i> Đăng Xuất</a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            <div class="text-center p-3 text-muted">
                © 2025 Copyright: Nhóm Đồ án CSDL Phân Tán - Khoa CNTT - ĐH Ngoại Ngữ Tin Học TP.HCM
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>